{% extends "::base.html.twig" %}

{% block title %}Livestream{% endblock %}

{% block css %}
<style>
    #twitch-embed, #chat-embed {
        height: 350px;
    }
    #twitch-embed {
        padding-bottom: 10px;
    }
    #main-content {
        margin: 10px 0 5px;
    }
    @media only screen and (min-width: 601px) {
        #twitch-embed, #chat-embed {
            height: 400px;
        }
        #chat-embed {
            height: 400px;
        }
    }
    @media only screen and (min-width: 993px) {
        #twitch-embed {
            height: 500px;
        }
    }
    @media only screen and (min-width: 1201px) {
        #twitch-embed, #chat-embed {
            height: 550px;
            padding-bottom: 0px;
        }
        #twitch {
            padding: 0px 5% 20px;
        }
        #main-content {
            margin: 40px 0 20px;
        }
    }
</style>
{% endblock %}

{% block content %}

    <div class="row">
        <div class="col s12">
            <div id="twitch-embed"></div>
        </div>
        {#<div class="col s12 xl3">
            <iframe frameborder="0"
                    scrolling="yes"
                    id="chat-embed"
                    src="http://www.twitch.tv/bh3_esport/chat"
                    height="100%"
                    width="100%">
            </iframe>
        </div>#}
    </div>

{% endblock %}

{% block javascripts %}
<script type="text/javascript" src="https://embed.twitch.tv/embed/v1.js"></script>
<script>
$(function() {

    var twitch = new Twitch.Embed("twitch-embed", {
    width: '100%',
    height: '100%',
    channel: "bh3_esport",
    allowfullscreen: true,
    autoplay: true,
    layout: 'video'
    });

});
</script>
{% endblock %}
