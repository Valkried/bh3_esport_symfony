{% extends "::base.html.twig" %}

{% block title %}
    Modifier un membre - Administration
{% endblock %}

{% block css %}
<style>
    @media (min-width: 601px) {
        .switch label {
            position: relative;
            top: 31px;
        }
    }
</style>
{% endblock %}

{% block content %}

    <div class="row">

        <div class="col s12">
            <h4 class="admin-title">Modifier un membre</h4>
        </div>

        <div class="col s12">
            <div class="card-panel" id="form">
            
                {# FORMULAIRE #}
                {{ form_start(form) }}

                    <div class="row">
                    
                        {# Pseudo #}
                        <div class="col s12 m6 input-field">
                            {{ form_errors(form.pseudo) }}
                            {{ form_widget(form.pseudo) }}
                            {{ form_label(form.pseudo) }}
                        </div>

                        {# Prénom #}
                        <div class="col s12 m6 input-field">
                            {{ form_errors(form.name) }}
                            {{ form_widget(form.name) }}
                            {{ form_label(form.name, 'Prénom') }}
                        </div>

                        {# Adresse email #}
                        <div class="col s12 input-field">
                            {{ form_errors(form.email) }}
                            {{ form_widget(form.email) }}
                            {{ form_label(form.email, 'Adresse email') }}
                        </div>

                        {# Roster #}
                        <div class="col s12 m6 xl4 input-field">
                            {{ form_errors(form.roster) }}
                            {{ form_widget(form.roster) }}
                            {{ form_label(form.roster) }}
                        </div>

                        {# Plateforme #}
                        <div class="col s12 m6 xl4 input-field">
                            {{ form_errors(form.plateforme) }}
                            {{ form_widget(form.plateforme) }}
                            {{ form_label(form.plateforme) }}
                        </div>

                        {# Twitter #}
                        <div class="col s12 xl4 input-field">
                            {{ form_errors(form.twitter) }}
                            {{ form_widget(form.twitter) }}
                            {{ form_label(form.twitter) }}
                        </div>

                        {# Profil Xbox Live #}
                        <div class="col s12 input-field">
                            {{ form_errors(form.profile) }}
                            {{ form_widget(form.profile) }}
                            {{ form_label(form.profile, 'Profil Xbox Live / Steam / Site web') }}
                        </div>

                        {# Photo #}
                        <div class="col s12 input-field file-field">
                            {{ form_errors(form.picture) }}
                            <div class="btn hoverable yellow darken-3 waves-effect waves-light">
                                <span><i class="material-icons left">image</i>Photo de profil</span>
                                {{ form_widget(form.picture) }}
                            </div>
                            <div class="file-path-wrapper">
                                <input type="text" class="file-path validate readonly" placeholder="L'image DOIT faire 250*250px" style="cursor: not-allowed;" disabled>
                            </div>
                        </div>

                        {# Fonction #}
                        <div class="col s12 m6 input-field">
                            {{ form_errors(form.rank) }}
                            {{ form_widget(form.rank) }}
                            {{ form_label(form.rank, 'Fonction (staff)') }}
                        </div>

                        {# Switch Joueur / Staff #}
                        <div class="col s12 m6">
                            <div class="switch">
                                <label>
                                    Joueur
                                    {{ form_widget(form.staff) }}
                                    <span class="lever"></span>
                                    Staff
                                </label>
                            </div>
                        </div>

                        {# Submit #}
                        <div class="col s12 input-field">
                            {{ form_widget(form.submit, {'attr': {'class': 'admin-button btn yellow darken-3 waves-effect waves-light hoverable'}, 'label': 'Modifier le membre'}) }}
                        </div>

                    </div>

                    {{ form_rest(form) }}

                {{ form_end(form) }}

            </div>
        </div>
    
    </div>

{% endblock %}

{% block javascripts %}
<script>
$(function() {

$('select').material_select();

});
</script>
{% endblock %}
