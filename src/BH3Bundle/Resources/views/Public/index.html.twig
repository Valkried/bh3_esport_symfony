{% extends "::base.html.twig" %}

{% block title %}News{% endblock %}

{% block css %}
<style>
    #slider {
        margin-bottom: 15px;
    }
    .pagination {
        margin-bottom: 0px;
        margin-top: 25px;
    }
    .social-buttons {
        border-radius: 15px;
    }
    #aside {
        padding-left: 12px;
    }
    #twitter {
        margin-top: 17px;
    }
</style>
{% endblock %}

{% block content %}

    <div class="row">
    
        <section class="col s12 l9">
            <div class="row">
            
                <div class="articles">
                
                    {# SLIDER #}
                    <div class="col s12 hide-on-small-only">
                        <div id="slider" class="carousel carousel-slider center-align hoverable">
                            {% for new in news %}
                                <a href="{{ path('news', {'id': new.id}) }}" class="carousel-item white-text" style="background: url('{{ asset('img/news/') ~ new.picture }}') center no-repeat; background-size: 1000px;">
                                    <h2>{{ new.title }}</h2>
                                </a>
                            {% endfor %}
                        </div>
                    </div>

                    {# NEWS #}
                    {% for new in news %}
                        <article class="col s12">
                            <a href="{{ path('news', {'id': new.id}) }}">
                                <div class="card-panel hoverable">
                                    <h4 class="black-text">{{ new.title }}</h4>
                                    <h6 class="red-text text-darken-4">Posté par auteur</h6>
                                    <p class="black-text">{{ new.content|slice(0, 350) }}...</p>
                                </div>
                            </a>
                        </article>
                    {% endfor %}
                
                </div>

                {# PAGINATION #}
                <div class="col s12 center-align">
                    <ul class="pagination">

                        {# Page précédente #}
                        {% if currentPage == 1 %}
                            <li class="disabled"><a><i class="material-icons">chevron_left</i></a></li>
                        {% else %}
                            <li class="waves-effect waves-light"><a href="{{ path('home', {'page': currentPage - 1}) }}"><i class="material-icons">chevron_left</i></a></li>
                        {% endif %}

                        {# Première page #}
                        <li class="waves-effect waves-light {% if currentPage == 1 %}active{% endif %}">
                            <a href="{{ path('home', {'page': 1}) }}">1</a>
                        </li>

                        {# Liste des pages #}
                        {% if nbPages > 2 %}
                            {% for page in 2..nbPages - 1 %}

                                {# Si l'écart entre la page courante et le début de la boucle est inférieur à 2, on affiche le numéro de page #}
                                {% if (page >= currentPage - 2) and (page <= currentPage + 2) %}
                                    <li class="waves-effect waves-light {% if currentPage == page %}active{% endif %}">
                                        <a href="{{ path('home', {'page': page}) }}">{{ page }}</a>
                                    </li>

                                {# Sinon, s'il s'agit de la première ou dernière itération, on ajout les points de suspension #}
                                {% elseif loop.first or loop.last %}
                                    <li class="disabled">
                                        <a>...</a>
                                    </li>
                                {% endif %}

                            {% endfor %}
                        {% endif %}

                        {# Dernière page #}
                        {% if nbPages != 1 %}
                            <li class="waves-effect waves-light {% if currentPage == nbPages %}active{% endif %}">
                                <a href="{{ path('home', {'page': nbPages}) }}">{{ nbPages }}</a>
                            </li>
                        {% endif %}

                        {# Page suivante #}
                        {% if currentPage == nbPages %}
                            <li class="disabled"><a><i class="material-icons">chevron_right</i></a></li>
                        {% else %}
                            <li class="waves-effect waves-light"><a href="{{ path('home', {'page': currentPage + 1}) }}"><i class="material-icons">chevron_right</i></a></li>
                        {% endif %}

                    </ul>
                </div>
            
            </div>
        </section>

        {# BARRE LATERALE #}
        <aside id="aside" class="col s3 hide-on-med-and-down">
            <div class="row">
            
                <div class="col s6 xl3">
                    <a href="https://www.facebook.com/BH3.fr" target="_blank">
                        <img src="{{ asset('img/social/facebook.png') }}" alt="Facebook" class="hoverable responsive-img social-buttons">
                    </a>
                </div>
                <div class="col s6 xl3">
                    <a href="https://twitter.com/burning_heads" target="_blank">
                        <img src="{{ asset('img/social/twitter.png') }}" alt="Twitter" class="hoverable responsive-img social-buttons">
                    </a>
                </div>
                <div class="col s6 xl3">
                    <a href="https://www.youtube.com/user/BH3Esport" target="_blank">
                        <img src="{{ asset('img/social/youtube.png') }}" alt="Youtube" class="hoverable responsive-img social-buttons">
                    </a>
                </div>
                <div class="col s6 xl3">
                    <a href="https://go.twitch.tv/bh3_esport" target="_blank">
                        <img src="{{ asset('img/social/twitch.png') }}" alt="Twitch" class="hoverable responsive-img social-buttons">
                    </a>
                </div>

                <div id="twitter" class="col s12">
                    <a class="twitter-timeline" data-lang="fr" data-height="600" data-theme="dark" data-link-color="#b71c1c" href="https://twitter.com/burning_heads">Burning Heads</a>
                </div>

            </div>
        </aside>

    </div>

{% endblock %}

{% block javascripts %}
<script>
    $(function() {

        $('.carousel-slider').carousel({fullWidth: true, indicators: true});

        setInterval(function() {
            $('.carousel.carousel-slider').carousel('next');
        }, 4000);

    });
</script>
<script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
{% endblock %}
